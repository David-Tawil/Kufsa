<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:fillViewport="false"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".ui.account_settings.AccountSettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_account_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="10sp"
            android:text="@string/title_activity_account_settings"
            android:textSize="40sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/password_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:text="@string/password_title"
            android:textSize="20sp"
            app:drawableLeftCompat="@drawable/ic_account_settings_24" />

        <LinearLayout
            android:id="@+id/linearLayout_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:scrollbarAlwaysDrawHorizontalTrack="true">

            <TextView
                android:id="@+id/password_description"
                style="?android:attr/listSeparatorTextViewStyle"
                android:layout_width='0dp'
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingBottom="10dp"
                android:text="@string/password_description"
                android:textSize="15sp" />

            <ImageButton
                android:id="@+id/reset_password_button"
                style="?android:attr/listSeparatorTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/reset_password_button"
                app:srcCompat="@drawable/ic_acount_action_36" />
        </LinearLayout>


        <TextView
            android:id="@+id/dark_mode_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:text="@string/dark_mode_title"
            android:textSize="20sp"
            app:drawableLeftCompat="@drawable/ic_account_settings_24" />

        <LinearLayout
            android:id="@+id/linearLayout_dark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:scrollbarAlwaysDrawHorizontalTrack="true">

            <TextView
                android:id="@+id/dark_mode_description"
                style="?android:attr/listSeparatorTextViewStyle"
                android:layout_width='0dp'
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingBottom="10dp"
                android:text="@string/dark_mode_description"
                android:textSize="15sp" />

            <ImageButton
                android:id="@+id/toggle_dark_Button"
                style="?android:attr/listSeparatorTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="5dp"
                app:srcCompat="@drawable/ic_acount_action_36"
                android:contentDescription="@string/toggle_dark_mode_button_desc" />
        </LinearLayout>

        <TextView
            android:id="@+id/report_issue_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:text="@string/report_issue_title"
            android:textSize="20sp"
            app:drawableLeftCompat="@drawable/ic_account_settings_24" />

        <LinearLayout
            android:id="@+id/linearLayout_report"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:scrollbarAlwaysDrawHorizontalTrack="true">

            <TextView
                android:id="@+id/report_issue_description"
                style="?android:attr/listSeparatorTextViewStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingBottom="10dp"
                android:text="@string/report_issue_description"
                android:textSize="15sp" />

            <ImageButton
                android:id="@+id/report_Button"
                style="?android:attr/listSeparatorTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/ic_acount_action_36"
                android:contentDescription="@string/report_button" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>